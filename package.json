{
  "name": "tips",
  "version": "1.0.0",
  "description": "",
  "type": "module",
  "scripts": {
    "css:links": "sass --no-source-map node_modules/@primer/css/links/index.scss docs/links.css",
    "css:md": "sass --no-source-map node_modules/@primer/css/markdown/index.scss docs/markdown.css",
    "css:cat": "cat src/app.css docs/markdown.css docs/links.css > docs/app.css",
    "postcss:cat": "rm docs/markdown.css docs/links.css",
    "css": "npm run css:links && npm run css:md && npm run css:cat",
    "docs": "rm -rf docs && mkdir docs",
    "predev": "npm run docs",
    "dev": "ts-node --esm scripts/index.ts --dev && npm run css",
    "prebuild": "npm run docs",
    "build": "ts-node --esm scripts/index.ts && npm run css"
  },
  "engines": {
    "node": ">=18.3.0"
  },
  "dependencies": {
    "@primer/css": "^20.8.0",
    "dompurify": "^2.4.1",
    "glob": "^8.0.3",
    "jsdom": "^20.0.3",
    "marked": "^4.2.5"
  },
  "devDependencies": {
    "@swc/core": "^1.3.24",
    "@swc/helpers": "^0.4.14",
    "@types/dompurify": "^2.4.0",
    "@types/glob": "^8.0.0",
    "@types/jsdom": "^20.0.1",
    "@types/marked": "^4.0.8",
    "@types/node": "^18.11.17",
    "regenerator-runtime": "^0.13.11",
    "sass": "^1.57.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.1",
    "typescript": "^4.9.4"
  }
}
