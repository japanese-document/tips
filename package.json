{
  "name": "tips",
  "version": "1.0.0",
  "description": "",
  "type": "module",
  "scripts": {
    "image": "cp -r src/images docs",
    "css:links": "cp node_modules/@primer/view-components/app/components/primer/beta/link.css docs/links.css",
    "css:md": "sass --no-source-map node_modules/@primer/css/markdown/index.scss docs/markdown.css",
    "css:cat": "cat src/app.css docs/markdown.css docs/links.css > docs/app.css",
    "postcss:cat": "rm docs/markdown.css docs/links.css",
    "css": "npm run css:links && npm run css:md && npm run css:cat",
    "docs": "rm -rf docs && mkdir docs",
    "prebuild": "npm run docs",
    "build": "ts-node scripts/index.ts && npm run css && npm run image",
    "fix": "eslint 'scripts/**/*.ts' --fix",
    "lint": "eslint 'scripts/**/*.ts'",
    "test": "jest"
  },
  "engines": {
    "node": ">=18.3.0"
  },
  "dependencies": {
    "@primer/css": "^20.8.3",
    "dompurify": "^3.0.1",
    "glob": "^9.3.4",
    "jsdom": "^21.1.1",
    "marked": "^4.2.12"
  },
  "devDependencies": {
    "@swc/core": "^1.3.26",
    "@swc/helpers": "^0.5.0",
    "@types/dompurify": "^3.0.0",
    "@types/jest": "^29.2.5",
    "@types/jsdom": "^21.1.0",
    "@types/marked": "^4.0.8",
    "@types/node": "^18.11.17",
    "@typescript-eslint/eslint-plugin": "^5.55.0",
    "@typescript-eslint/parser": "^5.55.0",
    "eslint": "^8.36.0",
    "eslint-import-resolver-typescript": "^3.5.3",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.0",
    "jest": "^29.3.1",
    "regenerator-runtime": "^0.13.11",
    "sass": "^1.59.3",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.1",
    "typescript": "^5.0.2"
  }
}
